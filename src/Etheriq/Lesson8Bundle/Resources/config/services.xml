<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="fantaView">Pagerfanta\View\TwitterBootstrap3View</parameter>
        <parameter key="guestListener">Etheriq\Lesson8Bundle\EventListener\GuestListener</parameter>
        <parameter key="symfony.event.dispatcher">Symfony\Component\EventDispatcher\EventDispatcher</parameter>
    </parameters>

    <services>

        <service id="pagerfanta.view.twitter_bootstrap" class="%fantaView%" public="false">
            <tag name="pagerfanta.view" alias="myFantaSet" />
        </service>

        <service id="etheriq.show.listener" class="Etheriq\Lesson8Bundle\EventListener\GuestListener">
            <call method="setMailer">
                <argument type="service" id="mailer" />
            </call>

            <tag name="kernel.event_listener" event="guest.edit" method="onGuestShown" />
            <tag name="kernel.event_listener" event="guest.add" method="onGuestCreated" />
            <tag name="kernel.event_listener" event="guest.delete" method="onGuestDelete" />
        </service>

    </services>

</container>

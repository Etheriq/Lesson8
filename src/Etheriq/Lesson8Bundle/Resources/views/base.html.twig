<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
        <link rel="stylesheet" href="{{ asset('css/myStyle.css') }}">
    {% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>

{% block body %}

    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div style="text-align: center; vertical-align: middle; line-height: 50px; border: solid 1px;">
        {% block header %}

        {% endblock header %}
    </div>
    <div style="margin-top: 0px; padding: 0; text-align: center; border: solid 1px;">
        {% block guestForm %}

        {% endblock guestForm %}
    </div>
    </nav>
    <div style="margin-top: 190px; overflow-y: scroll; height: 100%; padding: 10px;">
        {% block content %}

        {% endblock content %}
    </div>

    <nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
    <div style="text-align: center; vertical-align: middle; line-height: 50px; border: solid 1px;">
        {% block footer %}

        {% endblock footer %}
    </div>
    </nav>

{% endblock body %}

{% block javascripts %}
    <script src="{{ asset('js/jquery.js') }}"></script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>
{% endblock %}
</body>
</html>

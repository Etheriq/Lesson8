{% extends 'EtheriqLesson8Bundle::base.html.twig' %}

{% block title %}
    Home page
{% endblock title %}

{% block header %}
   <nav>
            <div class="col-md-7" style="text-align: right;">
                <div class="pagerfanta">
                    {{ pagerfanta(fanta, 'myFantaSet') }}
                </div>
            </div>
            <div class="col-md-4" style="text-align: left;">
                <div style="padding-top: 35px;">
                <strong>{{fanta.NbResults}}</strong> guests has found.

                {% if fanta.haveToPaginate %}
                    Page <strong>{{fanta.CurrentPage}}/{{fanta.NbPages}} </strong>
                {% endif %}
                </div>
            </div>
   </nav>
{% endblock header %}

    {% block guestForm %}
        <div>
            {{ form_start(form, {'attr': {'role': 'form', 'novalidate': 'novalidate' }}) }}
                <div class="col-md-6" style="text-align: right">
                        <div class="form-inline">
                            {{ form_label(form.nameGuest, 'Имя:') }}
                            {{ form_widget(form.nameGuest, { 'attr': {'class': 'form-control', 'style': 'width:30%; ', 'placeholder': 'Введите имя' } }) }}

                            {{ form_label(form.emailGuest, 'Почта:') }}
                            {{ form_widget(form.emailGuest, { 'attr': {'class': 'form-control', 'style': 'width:30%; ', 'placeholder': 'Введите почтовый адрес' } }) }}

                            {{ form_widget(form.save, { 'attr': {'class': 'btn btn-success'} }) }}
                        </div>
                    <div class="form-inline" style="margin: 5px 0;">
                    {{ form_label(form.bodyGuest, 'Сообщение:') }}
                    {{ form_widget(form.bodyGuest, { 'attr': {'class': 'form-control', 'style': 'width:80%; height: 50px;', 'placeholder': 'Введите сообщение, минимальная длина 100 символом ' } }) }}
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="col-md-12" style="text-align: left;">
                        <p>{{ form_errors(form.nameGuest) }}</p>
                        <p>{{ form_errors(form.emailGuest) }}</p>
                    </div>
                    <div class="col-md-12" style="text-align: left;">
                        <p>{{ form_errors(form.bodyGuest) }}</p>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    {% endblock guestForm %}

    {% block content %}

    {% if fanta.haveToPaginate %}
        {% for item in fanta %}
            <div class="well">
                <u>Запись id # {{ item.id }}</u>.
                <a href="{{ path('delete_item', {'slug': item.slug}) }}" class="btn btn-danger btn-sm">Delete</a>
                <a href="{{ path('show_info', {'slug': item.slug}) }}" class="btn btn-info btn-sm">More info</a>
                <span> Создан: {{ item.getCreated()| date("d.m.Y G:i") }} </span>
                <span> Изменен: {{ item.getUpdated()| date("d.m.Y G:i") }} </span>
                <hr>
                <b>{{ item.getNameGuest() }}</b>  ({{ item.getEmailGuest() }})<br>
                {{ item.getBodyGuest()[:100] }} ...<br>
            </div>
        {% endfor %}
    {% endif %}

    {% endblock content %}

    {% block footer %}
        <div class="pagerfanta">
            {{ pagerfanta(fanta, 'myFantaSet') }}
        </div>
    {% endblock footer %}